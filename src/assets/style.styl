$mainColor = #3F51B5

*
  box-sizing: border-box

html
  margin: 0 10px
  
body
  font: 14px/1.5 'Lato', sans-serif
  padding: 0
  margin: 0
  position: fixed
  top: 9px
  overflow-x: hidden
  width: calc(100vw - 20px)
  height: calc(100vh - 30px)

  &:before
    content: ""
    position: absolute
    left: 50%
    margin-left: -8px
    margin-top: -8px
    display: block
    width: 0
    height: 0
    border-left: 8px solid transparent
    border-right: 8px solid transparent
    border-bottom: 8px solid $mainColor
    z-index: 1

  &:after
    content: ''
    width: inherit
    height: inherit
    position: absolute
    top: 0
    left: 0
    border-radius: 5px
    box-shadow: 0px 1px 8px -1px black
    z-index: 0
    pointer-events: none

.calendar-container
  background: white


.calendar-container header 
  background: $mainColor
  color: #fff
  padding: 25px
  text-align: center
  border-radius: 5px 5px 0 0


.day 
  font-size: 8em
  line-height: 1
  font-weight: 900


.month 
  font-size: 4em
  line-height: 1
  text-transform: lowercase


.calendar 
  background: #fff
  padding: 10px 5px

.calendar
  .days-of-week,
  .days
    display: grid
    grid-template: auto / 1fr 1fr 1fr 1fr 1fr 1fr 1fr

  .days-of-week
    color: $mainColor
    font-weight: 700
    text-transform: uppercase

  .days
    color: #555

  .days-of-week div,
  .days div
    height: 27px
    text-align: center
    padding: 1px

  .days > div > span
    padding: 0 8px
    cursor: pointer

    //&:hover:before
    //  content: ''
    //  position: absolute
    //  top: 50%
    //  left: 50%
    //  transform: translate(-50%, -50%)
    //  width: 25px
    //  height: 25px
    //  border-radius: 50%
    //  border: 1px solid blue

  .current-day > span
    position: relative

  .current-day > span:before
    content: ''
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 25px
    height: 25px
    border-radius: 50%
    background-color: rgba(59, 59, 220, 0.2)


.prev-month,
.next-month
  color: #cacaca

.left,
.right
  vertical-align: middle
  user-select: none
  cursor: pointer

path
  stroke-width: 3
  transition: all 250ms ease-in-out

.left:hover path,
.left:focus path,
.right:hover path,
.right:focus path
  stroke-width: 6

.left:active path,
.right:active path
  stroke-width: 10
  transition: all 100ms ease-in-out
