* 
  box-sizing: border-box


body 
  font: 14px/1.5 'Lato', sans-serif
  padding: 0
  margin: 0
  overflow-x: hidden


.calendar-container
  width: 100vw
  height: 100vh


.calendar-container header 
  background: #e66b6b
  color: #fff
  padding: 25px
  text-align: center


.day 
  font-size: 8em
  line-height: 1
  font-weight: 900


.month 
  font-size: 4em
  line-height: 1
  text-transform: lowercase


.calendar 
  background: #fff
  padding: 30px 0


.calendar
  .days-of-week,
  .days
    display: grid
    grid-template: auto / 1fr 1fr 1fr 1fr 1fr 1fr 1fr

  .days-of-week
    color: #e66b6b
    font-weight: 700
    text-transform: uppercase

  .days
    color: #555

  .days-of-week div,
  .days div
    height: 27px
    text-align: center
    padding: 1px

  .days > div > span
    padding: 0 8px
    cursor: pointer

  .current-day > span
    position: relative

  .current-day > span:before
    content: ''
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 25px
    height: 25px
    border-radius: 50%
    background-color: rgba(0,0,255,0.2)


.prev-month,
.next-month
  color: #cacaca
